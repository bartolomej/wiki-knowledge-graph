<script>

    (function () {

    })();

    async function getGraph(limit) {
        fetch('http://localhost:3000/graph')
    }

    var i,
            s,
            N = 100,
            E = 500,
            g = {
                nodes: [],
                edges: []
            };

    // Generate a random graph:
    for (i = 0; i < N; i++)
        g.nodes.push({
            id: 'n' + i,
            label: 'Node ' + i,
            x: Math.random(),
            y: Math.random(),
            size: Math.random(),
            color: '#666'
        });

    for (i = 0; i < E; i++)
        g.edges.push({
            id: 'e' + i,
            source: 'n' + (Math.random() * N | 0),
            target: 'n' + (Math.random() * N | 0),
            size: Math.random(),
            color: '#ccc'
        });

    // Instantiate sigma:
    s = new sigma({
        graph: g,
        container: 'graph-container'
    });
</script>
